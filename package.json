{
  "name": "angular-async-tracker",
  "version": "1.0.2",
  "description": "A port of angular-promise-tracker to angular 6+ that also supports observables",
  "scripts": {
    "start": "npm run test:watch",
    "build:dist": "ng-packagr -p package.json",
    "build:clean": "del-cli dist",
    "test": "karma start --single-run && npm run build:dist && npm run build:clean",
    "test:watch": "karma start --auto-watch",
    "commit": "git-cz",
    "compodoc": "compodoc -p tsconfig-compodoc.json -d docs --disableGraph --disableCoverage --disablePrivate --disableInternal --disableLifeCycleHooks --disableProtected",
    "gh-pages": "git checkout gh-pages && git merge master --no-edit --no-ff && npm run compodoc && git add . && git commit -m \"chore: build docs\" && git push && git checkout master",
    "copyfiles": "copyfiles CHANGELOG.md dist",
    "prerelease": "npm test",
    "release:git": "standard-version && git push --follow-tags origin master",
    "release:npm": "npm run build:dist && npm run copyfiles && npm publish dist",
    "release": "npm run release:git && npm run release:npm",
    "postrelease": "npm run build:clean && npm run gh-pages",
    "commitmsg": "validate-commit-msg",
    "codecov": "cat coverage/lcov.info | codecov",
    "precommit": "pretty-quick --staged"
  },
  "ngPackage": {
    "lib": {
      "entryFile": "src/index.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattlewis92/angular-async-tracker.git"
  },
  "keywords": [
    "angular2",
    "angular",
    "angular6",
    "async-tracker",
    "promises",
    "observables",
    "async"
  ],
  "author": "Matt Lewis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattlewis92/angular-async-tracker/issues"
  },
  "homepage": "https://github.com/mattlewis92/angular-async-tracker#readme",
  "devDependencies": {
    "@angular/common": "^6.0.1",
    "@angular/compiler": "^6.0.1",
    "@angular/compiler-cli": "^6.0.1",
    "@angular/core": "^6.0.1",
    "@angular/language-service": "^6.0.1",
    "@angular/platform-browser": "^6.0.1",
    "@angular/platform-browser-dynamic": "^6.0.1",
    "@compodoc/compodoc": "^1.1.2",
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.8",
    "@types/sinon": "^4.3.3",
    "@types/sinon-chai": "^2.7.31",
    "@types/webpack": "^4.1.6",
    "chai": "^4.1.2",
    "codecov": "^3.0.2",
    "codelyzer": "^4.3.0",
    "commitizen": "^2.8.1",
    "copyfiles": "^2.0.0",
    "core-js": "^2.5.6",
    "cz-conventional-changelog": "^2.0.0",
    "del-cli": "^1.1.0",
    "husky": "^0.14.3",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "mocha": "^5.1.1",
    "ng-packagr": "^3.0.0-rc.5",
    "prettier": "^1.12.1",
    "pretty-quick": "^1.4.1",
    "rxjs": "^6.1.0",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "standard-version": "^4.3.0",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0",
    "tslint-config-mwl": "^0.4.1",
    "tslint-loader": "^3.6.0",
    "typescript": "~2.7.2",
    "validate-commit-msg": "^2.8.0",
    "webpack": "^4.8.3",
    "zone.js": "^0.8.26"
  },
  "peerDependencies": {
    "@angular/core": ">=6.0.0 <7.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
