{
  "name": "angular-async-tracker",
  "version": "1.0.2",
  "description": "A port of angular-promise-tracker to angular 2+ that also supports observables",
  "main": "./bundles/angular-async-tracker.umd.js",
  "module": "./index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "start": "npm run test:watch",
    "build:umd": "webpack --config webpack.config.umd.ts",
    "build:ngc": "ngc -p tsconfig-ngc.json",
    "build:dist": "npm run build:umd && npm run build:ngc",
    "build:clean": "del-cli dist",
    "test": "karma start --single-run && npm run build:dist && npm run build:clean",
    "test:watch": "karma start --auto-watch",
    "commit": "git-cz",
    "compodoc": "compodoc -p tsconfig-compodoc.json -d docs --disableGraph --disableCoverage --disablePrivateOrInternalSupport",
    "gh-pages": "git checkout gh-pages && git merge master --no-edit --no-ff && npm run compodoc && git add . && git commit -m \"chore: build docs\" && git push && git checkout master",
    "copyfiles": "copyfiles package.json LICENSE README.md CHANGELOG.md dist",
    "prerelease": "npm test",
    "release:git": "standard-version && git push --follow-tags origin master",
    "release:npm": "npm run build:dist && npm run copyfiles && npm publish dist",
    "release": "npm run release:git && npm run release:npm",
    "postrelease": "npm run build:clean && npm run gh-pages",
    "commitmsg": "validate-commit-msg",
    "codecov": "cat coverage/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattlewis92/angular-async-tracker.git"
  },
  "keywords": [
    "angular2",
    "angular",
    "angular4",
    "async-tracker",
    "promises",
    "observables",
    "async"
  ],
  "author": "Matt Lewis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mattlewis92/angular-async-tracker/issues"
  },
  "homepage": "https://github.com/mattlewis92/angular-async-tracker#readme",
  "devDependencies": {
    "@angular/common": "^4.4.7",
    "@angular/compiler": "^4.4.7",
    "@angular/compiler-cli": "^4.4.7",
    "@angular/core": "^4.4.7",
    "@angular/language-service": "^4.4.7",
    "@angular/platform-browser": "^4.4.7",
    "@angular/platform-browser-dynamic": "^4.4.7",
    "@compodoc/compodoc": "^1.1.2",
    "@types/chai": "^3.4.30",
    "@types/jasmine": "^2.8.7",
    "@types/node": "^7.0.64",
    "@types/sinon": "^2.1.2",
    "@types/sinon-chai": "^2.7.31",
    "@types/webpack": "^2.2.8",
    "awesome-typescript-loader": "^3.5.0",
    "chai": "^3.5.0",
    "codecov": "^2.1.0",
    "codelyzer": "^2.0.0",
    "commitizen": "^2.8.1",
    "copyfiles": "^1.2.0",
    "core-js": "^2.5.6",
    "cz-conventional-changelog": "^2.0.0",
    "del-cli": "^0.2.1",
    "husky": "^0.13.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine-core": "^2.99.1",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-jasmine": "^1.1.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.13",
    "rxjs": "^5.5.10",
    "sinon": "^2.0.0",
    "sinon-chai": "^2.8.0",
    "standard-version": "^4.3.0",
    "ts-node": "^3.0.0",
    "tslint": "^4.0.2",
    "tslint-loader": "^3.6.0",
    "typescript": "~2.2.1",
    "validate-commit-msg": "^2.8.0",
    "webpack": "^2.2.0",
    "webpack-angular-externals": "^1.0.0",
    "webpack-rxjs-externals": "^1.0.0",
    "zone.js": "^0.8.26"
  },
  "peerDependencies": {
    "@angular/core": ">=2.0.0 <7.0.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
